#!/bin/bash

# 1️⃣ Preimenuj PNG fajlove (ukloni ? i sve poslije)
for f in *.png*; do
    [ -f "$f" ] || continue

    clean="${f%%\?*}"

    if [ "$f" != "$clean" ]; then
        mv -n "$f" "$clean"
    fi
done

# 2️⃣ Izreži donju polovinu slike
for img in *.png; do
    [ -f "$img" ] || continue

    height=$(identify -format "%h" "$img")
    half=$((height / 2))

    # zadrži samo donji dio
    convert "$img" -crop "x${half}+0+${half}" +repage "$img"
done

